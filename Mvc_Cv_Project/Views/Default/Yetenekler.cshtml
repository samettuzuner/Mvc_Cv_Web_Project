@using Mvc_Cv_Project.Models.Entity
@model List<TblYetenekler>


<div class="container-xxl py-6 pb-5" id="yetenekler">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="display-5 mb-5">Yeteneklerim🎯</h1>
                <p class="mb-4">Projelerimde aktif olarak geliştirme yaptığım yazılım dilleri ve teknolojileri aşağıdaki grafikte yer almaktadır.</p>
                <h4 class="mb-4">Kullandığım Yazılım Dilleri</h4>
                <div class="row align-items-center">



                    <div class="col-md-12">

                        @foreach (var item in Model)
                        {


                            <div class="skill mb-4">
                                <div class="d-flex justify-content-between">



                                    <h6 class="font-weight-bold">@item.Yetenek</h6>
                                    <h6 class="font-weight-bold">@item.Oran%</h6>

                                </div>

                                <div class="progress">
                                    <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Oran" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>

                            </div>
                        }
                        </div>
                    
                </div>
            </div>
            
        </div>
    </div>
</div>



