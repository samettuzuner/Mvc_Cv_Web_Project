@using Mvc_Cv_Project.Models.Entity
@model List<TblTecrubelerim>

    <div class="container-fluid py-5" id="tecrubelerim">
        <h1 class="display-5 text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Tecrübelerim🥇</h1>
        <div class="row justify-content-center">
            <div class="col-lg-3 d-none d-lg-block">
                <div class="testimonial-left h-100">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.1s" src="~/proman-1.0.0/proman-1.0.0/img/python.svg" alt="">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.3s" src="~/proman-1.0.0/proman-1.0.0/img/kotlin-plain-wordmark.svg" alt="">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.5s" src="~/proman-1.0.0/proman-1.0.0/img/java-original-wordmark.svg" alt="">
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="owl-carousel testimonial-carousel">
                    @foreach (var x in Model)
                    {


                    <div class="testimonial-item text-center">
                        <div class="position-relative mb-5">
                            <img class="img-fluid rounded-circle border border-secondary p-2 mx-auto" src="@x.ResimLink" alt="">
                            <div>
                            
                            </div>
                        </div>
                        <h5>@x.Baslik</h5>
                        <hr class="w-25 mx-auto">

                        <h6 class="mb-3"> <span class="text-primary">@x.AltBaslik</span></h6>
                        <p class="mb-3"><i class="far fa-check-circle text-primary me-3"></i>@x.Tarih</p>
                    </div>
                    }
                   
                </div>
            </div>
            <div class="col-lg-3 d-none d-lg-block">
                <div class="testimonial-right h-100">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.1s" src="~/proman-1.0.0/proman-1.0.0/img/c-sharp-c.svg" alt="">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.3s" src="~/proman-1.0.0/proman-1.0.0/img/swift.svg" alt="">
                    <img class="img-fluid wow fadeIn" data-wow-delay="0.5s" src="~/proman-1.0.0/proman-1.0.0/img/file-type-angular.svg" alt="">

                </div>
            </div>
        </div>
    </div>
